FROM ruby:3.4.5-slim

# 作業ディレクトリを設定
WORKDIR /app

# システムパッケージをインストール
RUN apt-get update -qq && \
    apt-get install -y \
      build-essential \
      libpq-dev \
      libyaml-dev \
      pkg-config \
      postgresql-client \
      git \
      curl && \
    rm -rf /var/lib/apt/lists/*

# GemfileとGemfile.lockをコピー
COPY Gemfile Gemfile.lock ./

# bundlerをインストールしてgemをインストール
RUN gem install bundler && \
    bundle install

# アプリケーションコードをコピー
COPY . .

# ポートを公開
EXPOSE 3000

# デフォルトコマンド
CMD ["rails", "server", "-b", "0.0.0.0"]